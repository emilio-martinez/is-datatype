{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "declaration": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "types": [
      "jasmine"
    ]
  },
  "compileOnSave": false,
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}